{
  "name": "nextjs-typescript-boilerplate",
  "author": {
    "email": "alexis.walravens@iodigital.com",
    "name": "Alexis Walravens"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && stylelint ./src/**/*.css",
    "lint-fix": "next lint --fix && stylelint --fix ./src/**/*.css",
    "lint:css": "stylelint --fix ./src/**/*.css",
    "check-types": "tsc --noEmit",
    "prettier": "prettier --write **/*.json",
    "storybook": "BROWSER=none start-storybook -p 6006 ./public",
    "build:storybook": "build-storybook -s public",
    "build:css-vars": "style-dictionary build --config ./.style-dictionary/config.json  && pnpm lint:css",
    "build:icons": "npx svg-sprite -s --symbol-dest public --symbol-sprite icons.svg src/assets/icons/*.svg",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.9.0",
    "yarn": "Please-use-pnpm-instead",
    "npm": "Please-use-pnpm-instead"
  },
  "dependencies": {
    "@next/font": "^13.0.1",
    "clsx": "^1.2.1",
    "focus-visible": "^5.2.0",
    "next": "13.0.1",
    "next-seo": "^5.13.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "the-new-css-reset": "^1.7.3"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-vite": "^0.2.5",
    "@storybook/react": "^6.5.13",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.1",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-react": "^12.0.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-storybook": "^0.6.7",
    "husky": "^8.0.1",
    "postcss": "^8.4.18",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^2.7.1",
    "storybook-css-modules-preset": "^1.1.1",
    "style-dictionary": "^3.7.1",
    "stylelint": "^14.14.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vite-tsconfig-paths": "^3.5.2"
  },
  "browserslist": [
    "> 3%",
    "last 2 versions",
    "not IE 11"
  ]
}
