{
  "name": "nextjs-poc",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix && stylelint '**/*.css' --fix",
    "lint:css": "stylelint --fix ./**/*.css",
    "storybook": "BROWSER=none start-storybook -p 6006 ./public",
    "build:storybook": "build-storybook -s public",
    "build:css-vars": "node .style-dictionary/build.js npm run lint:css",
    "build:icons": "rm -f src/components/icons/* && npx @svgr/cli -d src/components/icons src/assets/icons && eslint --fix src/components/icons",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0",
    "yarn": "Please-use-pnpm-instead",
    "npm": "Please-use-pnpm-instead"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "focus-visible": "^5.2.0",
    "next": "12.1.6",
    "next-seo": "^5.4.0",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@types/node": "^17.0.33",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "babel-loader": "^8.2.5",
    "eslint": "^8.15.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-storybook": "^0.5.11",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.13",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.5.0",
    "storybook-css-modules-preset": "^1.1.1",
    "style-dictionary": "^3.7.0",
    "stylelint": "^14.8.2",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "tinycolor2": "^1.4.2",
    "typescript": "^4.6.4"
  },
  "resolutions": {
    "webpack": "^5"
  },
  "browserslist": [
    "> 3%",
    "last 2 versions",
    "not IE 11"
  ],
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "src/**/*.css": [
      "stylelint"
    ]
  }
}
