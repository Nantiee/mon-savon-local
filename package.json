{
  "name": "nextjs-poc",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix && stylelint '**/*.css' --fix",
    "lint:css": "stylelint --fix ./**/*.css",
    "prettier": "prettier --write **/*.json",
    "storybook": "BROWSER=none start-storybook -p 6006 ./public",
    "build:storybook": "build-storybook -s public",
    "build:css-vars": "style-dictionary build --config ./.style-dictionary/config.json  && pnpm lint:css",
    "build:icons": "rm -f src/components/icons/* && npx @svgr/cli -d src/components/icons src/assets/icons && eslint --fix src/components/icons",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0",
    "yarn": "Please-use-pnpm-instead",
    "npm": "Please-use-pnpm-instead"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "focus-visible": "^5.2.0",
    "next": "12.3.0",
    "next-seo": "^5.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "the-new-css-reset": "^1.7.3"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/react": "^6.5.12",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "8.23.1",
    "eslint-config-next": "12.3.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-storybook": "^0.6.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^2.7.1",
    "storybook-css-modules-preset": "^1.1.1",
    "style-dictionary": "^3.7.1",
    "stylelint": "^14.12.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^28.0.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.2",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "browserslist": [
    "> 3%",
    "last 2 versions",
    "not IE 11"
  ],
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "src/**/*.css": [
      "stylelint"
    ],
    "src/**/*.json": [
      "prettier --write **/*.json"
    ]
  }
}
