{
  "source": ["src/assets/styles/tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "size/rem"
      ],
      "buildPath": "src/assets/styles/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables"
        }
      ],
      "options": {
        "outputReferences": true
      }
    }
  }
}
